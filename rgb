import cv2
import numpy as np

img=cv2.imread("C:\\simrat\\winter bird.jpg")

print("shape==",img.shape)
print("no. of pixels==",img.size)
print("datatype==",img.dtype)
print("imagetype==",type(img))
print(cv2.split(img))
b,g,r=cv2.split(img)
cv2.imshow("blue",b)
cv2.imshow("green",g)
cv2.imshow("red",r)




cv2.imshow("result",img)
cv2.waitKey(0)
cv2.destroyAllWindows()

